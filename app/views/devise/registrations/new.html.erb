<%= render :partial => "common/nav" %>

<div id="list" class="pure-u-1" style="padding: 0 0 0 1em;">
  <h2>Sign up</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "pure-form", target: "_self"}) do |f| %>
    
  
    <div class="field">
      <div><%= f.label :email %></div>
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>
    
    <div class="field">
      <div><%= f.label :name %></div>
      <%= f.text_field :name %>
    </div>
  
    <div class="field">
      <div><%= f.label :password %></div>
      <%= f.password_field :password, autocomplete: "new-password" %>
      <% if @minimum_password_length %>
      <div>(<%= @minimum_password_length %> characters minimum)</div>
      <% end %>
    </div>
  
    <div class="field">
      <div><%= f.label :password_confirmation %></div>
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>
  
    <div class="actions">
      <%= f.submit "Sign up", class: "pure-button pure-button-primary"  %>
    </div>
  <% end %>
  
  <%= render "devise/shared/links" %>
  <% if !alert.nil? %>
    <p class="pure-u-1-2 alert"><%= alert %></p>
  <% end %>
  <%= render "devise/shared/error_messages", resource: resource %>
</div>