<%= render :partial => "common/nav" %>

<div id="list" class="pure-u-1" style="padding: 0 0 0 1em;">
  <h2>Change your password</h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: "pure-form"}) do |f| %>
    
    <%= f.hidden_field :reset_password_token %>
  
    <div class="field">
      <div><%= f.label :password, "New password" %></div>
      <%= f.password_field :password, autofocus: true, autocomplete: "new-password" %>
      <% if @minimum_password_length %>
        <div>(<%= @minimum_password_length %> characters minimum)</div>
      <% end %>
    </div>
  
    <div class="field">
      <div><%= f.label :password_confirmation, "Confirm new password" %></div>
      <%= f.password_field :password_confirmation, autocomplete: "off" %>
    </div>
  
    <div class="actions">
      <%= f.submit "Change my password", class: "pure-button pure-button-primary" %>
    </div>
  <% end %>
  
  <%= render "devise/shared/links" %>
  <% if !alert.nil? %>
    <p class="pure-u-1-2 alert"><%= alert %></p>
  <% end %>
  <%= render "devise/shared/error_messages", resource: resource %>
</div>